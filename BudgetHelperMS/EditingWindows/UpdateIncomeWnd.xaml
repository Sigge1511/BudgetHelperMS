<Window x:Class="BudgetHelperMS.EditingWindows.UpdateIncomeWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:BudgetHelperClassLibrary.Models;assembly=BudgetHelperClassLibrary"
        mc:Ignorable="d" 
        Height="340" Width="501"
        d:DataContext="{d:DesignInstance Type=models:Income}"
        Background="{StaticResource PanelJewelBrush1}" 
        Foreground="White"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontSize="27"
        FontFamily="pack://application:,,,/Resources/#IM FELL English SC">

    <StackPanel Margin="5">
        <TextBlock Text="Edit Amount:" 
                   Margin="20,0,0,0" 
                   Foreground="{StaticResource MutedBrush}"/>
        <TextBox x:Name="AmountTextBox" 
                 HorizontalAlignment="Left"
                 Margin="20,0,0,5"
                 Text="{Binding Amount, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource ResourceKey=EntryBox}"
                 Padding="0" Width="200"/>

        <TextBlock Text="Edit Source:" 
                   Margin="20,10,0,0" 
                   Foreground="{StaticResource MutedBrush}"/>
        <ComboBox x:Name="SourceComboBox"                 
                  DisplayMemberPath="SourceName" 
                  SelectedValuePath="Id"
                  SelectedValue="{Binding IncomeSource, Mode=TwoWay}"
                  Style="{StaticResource DarkComboBoxStyle}"
                  Padding="5"
                  Width="200"
                  Height="30" 
                  HorizontalAlignment="Left"
                  Margin="20,10,0,5" >
            <ComboBox.Resources>
                <Style TargetType="ScrollViewer">
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                    <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
                </Style>
            </ComboBox.Resources>
        </ComboBox>
        <DatePicker SelectedDate="{Binding ReceivedDate, 
                                   Mode=TwoWay}" 
                    Foreground="White" 
                    BorderBrush="{StaticResource NeonBrush}" 
                    Background="Transparent"
                    CalendarStyle="{StaticResource DarkCalendarStyle}" 
                    Width="200"
                    Height="50"
                    Margin="20,10,0,5" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" >
            <DatePicker.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="Background" Value="#11ffffff"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DatePicker.Resources>
        </DatePicker>
        <StackPanel Orientation="Horizontal" Width="350"
                    HorizontalAlignment="Left"
                   Margin="20,10,0,5" 
>
            <Button Content="Update" 
                    Click="UpdateButton_Click" 
                    Style="{StaticResource ResourceKey=YesButton}"
                    FontSize="20" 
                    Width="125"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Style="{StaticResource ResourceKey=NeutralButton}"
                    Margin="10" 
                    FontSize="20"
                    Width="125"/>
        </StackPanel>
    </StackPanel>
</Window>