<Window x:Class="BudgetHelperMS.EditingWindows.DeleteExpenseWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:BudgetHelperClassLibrary.Models;assembly=BudgetHelperClassLibrary"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=models:Expense}"
        Background="{StaticResource PanelJewelBrush1}" 
        WindowStartupLocation="CenterOwner"        
        ResizeMode="NoResize"
        FontSize="27"
        FontFamily="pack://application:,,,/Resources/#IM FELL English SC" Width="717" Height="385">

    <StackPanel Margin="0,20,0,0">
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                    <TextBlock Grid.Column="0" Text="Amount:" 
                               Margin="20,0,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="20,0,0,5"
                               Width="150"
                               Text="{Binding Amount}" 
                               FontSize="24"
                               Padding="0"/>

                    <TextBlock Text="Name:" 
                               Margin="20,10,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="20,0,0,5"
                               Width="200"
                               Text="{Binding Name}" 
                               FontSize="24"
                               Padding="0"/>
                    <TextBlock Text="Category:" 
                               Margin="20,10,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="20,0,0,5"
                               Width="200"
                               Text="{Binding Category}" 
                               FontSize="24"
                               Padding="0"/>
                    <TextBlock Text="Date:" 
                               Margin="20,10,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="20,0,0,5"
                               Width="200"
                               Text="{Binding ExpenseDate, 
                               StringFormat=\{yyyy-MM-dd\}}"                               FontSize="24"
                               Padding="0"/>
                    
                </StackPanel>
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center" Width="313">
                    <TextBlock Text="Is it a recurring expense:" 
                                Margin="20,0,0,0" 
                                 Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock HorizontalAlignment="Left"
                                Margin="20,0,0,5"
                                  Width="200"
                                 Text="{Binding IsRecurring}" 
                               FontSize="24"
                               Padding="0"/>
                    <TextBlock Text="How often (In Months):" 
                              Margin="20,10,0,0" 
                                Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock HorizontalAlignment="Left"
                              Margin="20,0,0,5"
                                Width="200"
                               Text="{Binding FrequencyInMonths}" 
                               FontSize="24"
                               Padding="0"/>
                    <TextBlock Margin="20,30,0,0" 
                                Foreground="{StaticResource NeonBrush}">
                                Are you sure you <LineBreak/> 
                                want to delete this?</TextBlock>

                    <StackPanel Orientation="Horizontal" Width="350"
                                HorizontalAlignment="Left"
                                Margin="5,10,0,5" Height="70" 
>
                        <Button Content="Delete" 
                                Click="DeleteButton_Click" 
                                Margin="10" 
                                FontSize="20"                    
                                Style="{StaticResource ResourceKey=NoButton}"
                                Width="125"/>
                        <Button Content="Cancel" 
                                Click="CancelButton_Click" 
                                Style="{StaticResource ResourceKey=NeutralButton}"
                                FontSize="20"
                                Width="125"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
