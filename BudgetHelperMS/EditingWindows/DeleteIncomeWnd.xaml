<Window x:Class="BudgetHelperMS.EditingWindows.DeleteIncomeWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:models="clr-namespace:BudgetHelperClassLibrary.Models;assembly=BudgetHelperClassLibrary"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance Type=models:Income}"
        Background="{StaticResource PanelJewelBrush1}" 
        WindowStartupLocation="CenterOwner"        
        ResizeMode="NoResize"
        FontSize="27"
        FontFamily="pack://application:,,,/Resources/#IM FELL English SC" Width="528" Height="551">

    <StackPanel Margin="0,33,-102,3">
        <TextBlock Text="Amount:" 
                   Margin="20,0,0,0" 
                   Foreground="{StaticResource MutedBrush}"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="20,0,0,5"
                   Width="150"
                   Text="{Binding Amount}" 
                   FontSize="24"
                   Foreground="{StaticResource NeonBrush}"
                   Padding="0"/>

        <TextBlock Text="Source:" 
                   Margin="20,10,0,0" 
                   Foreground="{StaticResource MutedBrush}"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="20,0,0,5"
                   Width="200"
                   Text="{Binding IncomeSource}" 
                   FontSize="24"
                   Foreground="{StaticResource NeonBrush}"
                   Padding="0"/>
        <TextBlock Text="Date:" 
                   Margin="20,10,0,0" 
                   Foreground="{StaticResource MutedBrush}"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="20,0,0,5"
                   Width="200"
                   Foreground="{StaticResource NeonBrush}"
                   Text="{Binding ReceivedDate, 
                   StringFormat=d}"                   
                   FontSize="24"
                   Padding="0"/>
        <TextBlock Margin="20,40,0,0" 
                   Foreground="{StaticResource NeonBrush}">
                   Are you sure you <LineBreak/> 
                   want to delete this?</TextBlock>

        <StackPanel Orientation="Horizontal" Width="350"
                    HorizontalAlignment="Left"
                   Margin="20,10,0,5" Height="70" 
>
            <Button Content="Delete" 
                    Click="DeleteButton_Click" 
                    Margin="10" 
                    FontSize="20"                    
                    Style="{StaticResource ResourceKey=NoButton}"
                    Width="125"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Style="{StaticResource ResourceKey=NeutralButton}"
                    FontSize="20"
                    Width="125"/>
        </StackPanel>

    </StackPanel>
</Window>
