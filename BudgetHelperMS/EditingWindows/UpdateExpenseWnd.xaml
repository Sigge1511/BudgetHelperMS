<Window x:Class="BudgetHelperMS.EditingWindows.UpdateExpenseWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:BudgetHelperClassLibrary.Models;assembly=BudgetHelperClassLibrary"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=models:Expense}"
        Background="{StaticResource PanelJewelBrush1}" 
        WindowStartupLocation="CenterOwner"        
        ResizeMode="NoResize"
        FontSize="27"
        FontFamily="pack://application:,,,/Resources/#IM FELL English SC" Width="622" Height="465">

    <StackPanel Margin="0,20,0,0">
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                    <TextBlock Text="Amount:" Grid.Column="0" 
                               Margin="20,0,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <TextBox HorizontalAlignment="Left"
                               Margin="20,0,0,5"
                               Width="150"                               
                               Text="{Binding SelectedExpense.Amount, 
                                      Mode=TwoWay}" 
                               FontSize="24"
                               Style="{StaticResource ResourceKey=EntryBox}"
                               Padding="0"/>

                    <TextBlock Text="Name:" 
                               Margin="20,10,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <TextBox HorizontalAlignment="Left"
                               Margin="20,0,0,5"
                               Width="150"
                               Style="{StaticResource ResourceKey=EntryBox}"
                               Text="{Binding SelectedExpense.Name,Mode=TwoWay}" 
                               FontSize="24"
                               Padding="0"/>
                    <TextBlock Text="Category:" 
                               Margin="20,10,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <ComboBox x:Name="CategoryComboBox" 
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedExpense.Category, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              Validation.ErrorTemplate="{x:Null}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              Padding="5"
                              Width="200"
                              Height="30"   
                              HorizontalAlignment="Left"
                              BorderThickness="0"
                              Margin="20,10,0,15" >
                        <ComboBox.Resources>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                    <TextBlock Text="Date:" 
                               Margin="20,10,0,0" 
                               Foreground="{StaticResource MutedBrush}"/>
                    <DatePicker SelectedDate="{Binding SelectedExpense.ExpenseDate, Mode=TwoWay}" 
                                Foreground="White" 
                                BorderBrush="{StaticResource NeonBrush}" 
                                Background="Transparent"
                                Margin="20,5,0,0"
                                Width="200"
                                Height="50"
                                CalendarStyle="{StaticResource DarkCalendarStyle}">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="#11ffffff"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Right" 
                            Width="357">
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,0">
                        <TextBlock Margin="20,0,20,0" Text="Is Recurring:"
                                   Foreground="{StaticResource MutedBrush}"/>
                        <CheckBox IsChecked="{Binding SelectedExpense.IsRecurring, Mode=TwoWay, 
                                  TargetNullValue=''}"
                                  Background="{StaticResource MutedBrush}"                                  
                                  BorderBrush="{StaticResource NeonBrush}" 
                                  VerticalAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </StackPanel>
                    <TextBlock Text="How often (In Months):" 
                                 Margin="20,10,10,5"
                                Foreground="{StaticResource MutedBrush}"/>
                    <TextBox HorizontalAlignment="Left"
                             Margin="20,0,0,5"
                             Style="{StaticResource ResourceKey=EntryBox}"
                             Width="150"
                             BorderThickness="0"
                             Background="{StaticResource PanelJewelBrush1}" 
                             Text="{Binding SelectedExpense.FrequencyInMonths,Mode=TwoWay}" 
                             FontSize="24"
                             Padding="0"/>

                    <StackPanel Orientation="Horizontal" 
                                Width="350"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Margin="20,10,0,5" Height="222" RenderTransformOrigin="0.42,2.052" 
>
                        <Button Content="Update" 
                                Click="UpdateButton_Click" 
                                Margin="10" 
                                FontSize="20"                    
                                Style="{StaticResource ResourceKey=YesButton}"
                                Width="125"/>
                        <Button Content="Cancel" 
                                Click="CancelButton_Click" 
                                Style="{StaticResource ResourceKey=NeutralButton}"
                                FontSize="20"
                                Width="125"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
