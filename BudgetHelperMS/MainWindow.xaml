<Window x:Class="BudgetHelperMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetHelperMS"
        mc:Ignorable="d"
        Title="BudgetHelper" Height="1080" Width="1920" 
        WindowStyle="SingleBorderWindow"
        Background="Transparent"
        Foreground="White"
        FontWeight="Bold">

    <Grid Background="{StaticResource BgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--//Smoke image lives here-->
        <Rectangle Grid.RowSpan="2" 
               Fill="{StaticResource BgImageBrush}" 
               IsHitTestVisible="False" />
        <!--//Top neon line lives here-->
        <Rectangle Grid.Row="0" 
               Height="2" 
               Fill="{StaticResource NeonBrush}" 
               VerticalAlignment="Top">
            <Rectangle.Effect>
                <DropShadowEffect Color="#A2D149" BlurRadius="10" ShadowDepth="0"/>
            </Rectangle.Effect>
        </Rectangle>
        <!--****** HÄR BÖRJAR RESTEN AV FÖNSTRET-->

        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>            
            
            
<!--* **** HÄR ÄR TOPPKOLUMNERNA-->  
            <!--//Add incomes here-->
            <Border Grid.Row="0"  
                    Grid.RowSpan="4" 
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <StackPanel Margin="20">
                    <TextBlock  Text="Add incomes"
                            Style="{StaticResource SectionHeader}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,30,0,0"/>
                    <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Amount"/>
                    <TextBox Text="{Binding NewIncomeAmount, 
                             UpdateSourceTrigger=PropertyChanged}"
                             Background="{StaticResource MutedBrush}"
                             Width="Auto" 
                             Height="30" 
                             Margin="0,10,0,0"/>
                    <TextBlock Style="{StaticResource SubHeader}" 
                               Margin="0,20,0,0"
                               Text="From"/>
                    <ComboBox ItemsSource="{Binding IncomeSources}" 
                              DisplayMemberPath="Name" 
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedSourceId}"
                              Background="{StaticResource MutedBrush}"
                              Foreground="{StaticResource PanelJewelBrush1}" 
                              BorderBrush="{StaticResource NeonBrush}"
                              Padding="5">
                        <ComboBox.Resources>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                    <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Recieved"
                             Margin="0,20,0,0"/>
                    <DatePicker SelectedDate="{Binding NewIncomeDate}" 
                                Foreground="White" 
                                BorderBrush="{StaticResource NeonBrush}" 
                                Background="Transparent"
                                CalendarStyle="{StaticResource DarkCalendarStyle}">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Background" Value="#11ffffff"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="5"/>
                                        </Style>
                                    </DatePicker.Resources>
                    </DatePicker>

                    <Button Content="SAVE" 
                            Style="{StaticResource YesButton}" 
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding AddIncomeCommand}"/>
                </StackPanel>
            </Border>
            <!--//Add expenses here-->
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"       
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <TextBlock Text="Add expenses"
                   Style="{StaticResource SectionHeader}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"/>
            </Border>
            <!--//Summary last month-->
            <Border Grid.Row="0" 
                            Grid.RowSpan="4"
                            Grid.Column="6"
                            Grid.ColumnSpan="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                <TextBlock  Text=""
                    Style="{StaticResource SectionHeader}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,30,0,0" TextAlignment="Center">                    
                    Summary<LineBreak/>Last month</TextBlock>
            </Border>
<!--//Month prognosis-->
            <Border Grid.Row="0" 
                            Grid.RowSpan="4"
                            Grid.Column="9"
                            Grid.ColumnSpan="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                <TextBlock  Text=""
                    Style="{StaticResource SectionHeader}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,30,0,0" TextAlignment="Center">                    
                    Prognosis for<LineBreak/>Next month</TextBlock>
            </Border>
            
            
            
<!--**************HÄR ÄR BOTTENKOLUMNERNA-->
<!--//Latest incomes here-->
            <Border
                    Grid.Column="0"
                    Grid.ColumnSpan="5" Margin="0,585,159,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Latest Incomes" 
                       Style="{StaticResource SectionHeader}" 
                       FontSize="40" 
                       TextAlignment="Center"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

                    <ItemsControl ItemsSource="{Binding LatestIncomes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}" 
                                   Foreground="{StaticResource TextBrush}" 
                                   FontSize="18"/>

                                    <TextBlock Grid.Column="1" 
                                   Text="{Binding Amount, StringFormat={}{0:C}}" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontWeight="Bold" FontSize="18"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
<!--//Latest expenses here-->
            <Border
                            Grid.Column="4"
                            Grid.ColumnSpan="4" Margin="0,585,0,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Latest Expenses" 
                   Style="{StaticResource SectionHeader}" 
                   FontSize="40"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

                    <ItemsControl ItemsSource="{Binding LatestExpenses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}" 
                                   Foreground="{StaticResource TextBrush}" 
                                   FontSize="18"/>

                                    <TextBlock Grid.Column="1" 
                                   Text="{Binding Amount, StringFormat={}{0:C}}" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontWeight="Bold" 
                                   FontSize="18"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
<!--//Year so far-->
            <Border
                            Grid.Column="7"
                            Grid.ColumnSpan="5" Margin="159,585,0,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                   Style="{StaticResource SectionHeader}" 
                   FontSize="40"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Margin="0,0,0,15">
                    Total incomes
                    <LineBreak/>So far
                    <LineBreak/>this year

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding IncomesThisYear}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2,5,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Date, StringFormat={}{0:MM/dd}}" 
                                           Foreground="{StaticResource MutedBrush}" 
                                           FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                           Foreground="{StaticResource TextBrush}" 
                                           FontSize="16" VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat={}{0:C}}" 
                                           Foreground="{StaticResource NeonBrush}" 
                                           FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
