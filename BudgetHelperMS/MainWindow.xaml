<Window x:Class="BudgetHelperMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetHelperMS"
        mc:Ignorable="d"
        Title="BudgetHelper" Height="1080" Width="1920" 
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource BgBrush}"
        Foreground="White"
        FontWeight="Bold">

    <Grid>
        <!--HÄR BOR GRÖNATOPPLINJEN-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" 
                   Height="2" 
                   Fill="{StaticResource NeonBrush}" 
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top">
            <Rectangle.Effect>
                <DropShadowEffect Color="#A2D149" BlurRadius="10" ShadowDepth="0"/>
            </Rectangle.Effect>
        </Rectangle>
        <!--HÄR BÖRJAR RESTEN AV FÖNSTRET-->

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="4" 
                Grid.ColumnSpan="3"
                Background="{StaticResource PanelBrush}"                    
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                    
            </Border>
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                Grid.Column="3"
                Grid.ColumnSpan="3"
                Background="{StaticResource MutedBrush}"                    
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            </Border>
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                    Grid.Column="6"
                    Grid.ColumnSpan="3"
                    Background="{StaticResource PanelBrush}"                    
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">            
            </Border>
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                    Grid.Column="9"
                    Grid.ColumnSpan="3"
                    Background="{StaticResource MutedBrush}"                    
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">        
            </Border>
        </Grid>
    </Grid>
    
</Window>
