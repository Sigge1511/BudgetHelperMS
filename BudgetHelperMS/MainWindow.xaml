<Window x:Class="BudgetHelperMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BudgetHelperClassLibrary.ViewModels;assembly=BudgetHelperClassLibrary"
        xmlns:local="clr-namespace:BudgetHelperMS"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:BudgetViewModel}"        
        Title="BudgetHelper" Height="1080" Width="1920" 
        WindowStyle="SingleBorderWindow"
        Background="Transparent"
        Foreground="White"
        FontWeight="Bold">

    <Grid Background="{StaticResource BgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--//Smoke image lives here-->
        <Rectangle Grid.RowSpan="2" 
               Fill="{StaticResource BgImageBrush}" 
               IsHitTestVisible="False" />
        <!--//Top neon line lives here-->
        <Rectangle Grid.Row="0" 
               Height="2" 
               Fill="{StaticResource NeonBrush}" 
               VerticalAlignment="Top">
            <Rectangle.Effect>
                <DropShadowEffect Color="#A2D149" BlurRadius="10" ShadowDepth="0"/>
            </Rectangle.Effect>
        </Rectangle>
        <!--****** HÄR BÖRJAR RESTEN AV FÖNSTRET-->

        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--* **** HÄR ÄR TOPPKOLUMNERNA-->
            <!--//Add incomes here-->
            <Border Grid.Row="0"  
                    Grid.RowSpan="4" 
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                <StackPanel Margin="20,5,0,0">
                    <TextBlock  Text="Add incomes"
                            Style="{StaticResource SectionHeader}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,30,0,0"/>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SubHeader}" 
                                   Text="Amount *"/>
                        <TextBox Text="{Binding NewIncomeAmount, 
                                        UpdateSourceTrigger=LostFocus, 
                                        StringFormat=\{0:F2\}, 
                                        FallbackValue='',
                                        Mode=TwoWay}"
                                 Style="{StaticResource EntryBox}"
                                 Margin="30,0,0,0"/>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                        <TextBlock Style="{StaticResource SubHeader}" 
                                   Text="From *"/>
                        <ComboBox ItemsSource="{Binding IncomeSources}" 
                                  SelectedItem="{Binding SelectedSource}"
                                  DisplayMemberPath="SourceName"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Padding="5"
                                  Width="200"
                                  Height="30" 
                                  VerticalAlignment="Center"
                                  Margin="30,0,0,0" 
                                  BorderBrush="{StaticResource MutedBrush}">
                            <ComboBox.Resources>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                    <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource MutedBrush}"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Recieved *"
                               Margin="0,20,0,0"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" 
                                Foreground="White" 
                                BorderBrush="{StaticResource NeonBrush}" 
                                Background="Transparent"
                                CalendarStyle="{StaticResource DarkCalendarStyle}" 
                                Width="200"
                                Margin="30,20,0,0"
                                VerticalAlignment="Center">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Background" Value="#11ffffff"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </StackPanel>
                    <Button Content="SAVE" 
                            Style="{StaticResource YesButton}" 
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding AddIncomeComm}"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,80,0,0">
                        <TextBlock
                        Style="{StaticResource SectionHeader}"
                                   FontSize="40"
                                   Foreground="{StaticResource MutedBrush}"
                                   Width="166"> 
                                   Yearly<LineBreak/>Salary:
                        </TextBlock>
                        <TextBox   Style="{StaticResource EntryBox}"
                                   Text="{Binding YearlySalary}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!--//Add expenses here-->
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"       
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <StackPanel Margin="20,5,0,0">
                    <TextBlock  Text="Add Expenses"
                        Style="{StaticResource SectionHeader}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,30,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SubHeader}" 
                                    Text="Amount *"/>
                        <TextBox Text="{Binding NewExpenseAmount, 
                                        UpdateSourceTrigger=LostFocus, 
                                        StringFormat=\{0:F2\}, 
                                        TargetNullValue='',
                                        Mode=TwoWay}"
                             Style="{StaticResource EntryBox}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Name *"
                               Margin="0,10,0,0"/>
                        <TextBox Text="{Binding NewExpenseName, 
                             UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EntryBox}"
                             Width="200" 
                             Height="30" 
                             Margin="30,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Margin="0,20,0,0"
                               Text="Category *"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  Padding="5"
                                  Width="200"
                                  Height="30" 
                                  Margin="30,25,0,15" >
                            <ComboBox.Resources>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                    <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Date"
                               Margin="0,20,0,0"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" 
                                    Foreground="White" 
                                    BorderBrush="{StaticResource NeonBrush}" 
                                    Background="Transparent"
                                    Margin="30,20,0,0"
                                    Width="200"
                                    CalendarStyle="{StaticResource DarkCalendarStyle}">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Background" Value="#11ffffff"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"                          
                                   Height="Auto"
                                   Text="Reccuring expense?" Width="289"/>
                        <CheckBox IsChecked="{Binding SelectedIsRecurring}"
                                  Height="17"
                                  Background="{StaticResource MutedBrush}"
                                  BorderBrush="{StaticResource NeonBrush}" 
                                  Checked="CheckBox_Checked_1"
                                  VerticalAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Margin="0,20,0,0">
                               Reccurs how <LineBreak/>Often (Months)</TextBlock>
                        <TextBox Text="{Binding SelectedFrequencyInMonths, 
                            TargetNullValue='', 
                            UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EntryBox}"
                             Width="200"
                             Height="30" Margin="30,25,0,0"/>

                    </StackPanel>
                    <Button Content="SAVE" 
                            Style="{StaticResource YesButton}"
                            Command="{Binding AddExpenseComm}" 
                            HorizontalAlignment="Right"       
                            Margin="0,0,56,0"
                            Click="Button_Click"/>

                    <StackPanel Orientation="Horizontal" Margin="0,45,0,0">
                        <TextBlock Style="{StaticResource SubHeader}" 
                                   Text="Add new category"/>
                        <TextBox Text="{Binding NewCategory, 
                                 UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EntryBox}"
                                 Width="175" 
                                 Height="30" 
                                 Margin="20,0,0,0"/>
                    </StackPanel>
                    <Button Content="ADD" 
                            Style="{StaticResource YesButton}" 
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding AddNewCategoryComm}"/>
                </StackPanel>
            </Border>
            <!--//Summary last month-->
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                    Grid.Column="6"        
                    Grid.ColumnSpan="3"        
                    HorizontalAlignment="Stretch"        
                    VerticalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeader}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="20,10,0,0" TextAlignment="Center">
                            Summary <LineBreak/> Last month
                    </TextBlock>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,0,0"
                                   Text="Total Incomes:"
                                   VerticalAlignment="Top"/>
                        <TextBox   Style="{StaticResource EntryBox}"
                                   Text="{Binding TotalIncomesLastMonth}"
                                   Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                               Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,0,0"
                                   VerticalAlignment="Top"
                                   Text="Total Expenses:"/>
                        <TextBox   Width="150"   
                                   Style="{StaticResource EntryBox}"
                                   Text="{Binding TotalExpensesLastMonth, 
                                          StringFormat='{}{0:F2}'}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,0,0"
                                   VerticalAlignment="Top"
                                   Width="150">
                            Total <LineBreak/> Balance:</TextBlock>
                        <TextBox   Style="{StaticResource EntryBox}"
                                   Text="{Binding NetAmountLastMonth, 
                                          StringFormat=\{0:F2\}}"/>
                    </StackPanel>
                    <Button Content="UPDATE" 
                        Style="{StaticResource YesButton}" 
                        Margin="27,20,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding UpdateMonthSumComm}"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,77,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,0,0"
                                   VerticalAlignment="Top"
                                   Text="Sick days past month:"/>
                        <TextBox   Style="{StaticResource EntryBox}"
                                   Width="65"
                                   Text="{Binding SickDays}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,0,0"
                                   Width="184"
                                   VerticalAlignment="Top"
                                   Text="Sick cat days:"/>
                        <TextBox   Style="{StaticResource EntryBox}"
                                   Width="64"
                                   Text="{Binding CareOfCatsDays}"/>
                    </StackPanel>
                    <Button Content="SAVE" 
                            Style="{StaticResource YesButton}" 
                            Margin="27,20,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding UpdateSickDaysComm}"/>
                </StackPanel>
            </Border>
            <!--//Month prognosis-->
            <Border Grid.Row="0" 
                            Grid.RowSpan="4"
                            Grid.Column="9"
                            Grid.ColumnSpan="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                <StackPanel>
                    <TextBlock  Style="{StaticResource SectionHeader}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,30,0,0" TextAlignment="Center">                    
                                Prognosis for<LineBreak/>Next month</TextBlock>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,0,0"
                                   VerticalAlignment="Top"> 
                                   Estimated<LineBreak/>Incomes:</TextBlock>
                        <TextBox   Style="{StaticResource EntryBox}"
                                   Text="{Binding AvgIncomeLastThreeMonths, 
                                   StringFormat='{}{0:F2}'}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,0,0"
                                   VerticalAlignment="Top"
                                   > Estimated<LineBreak/>Expenses:</TextBlock>
                        <TextBox   Style="{StaticResource EntryBox}"
                                   Text="{Binding AvgExpenseLastThreeMonths, 
                                          StringFormat='{}{0:F2}'}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
            <!--*********   HÄR ÄR BOTTENKOLUMNERNA -->
            <!--//Latest incomes here-->
            <Border
                    Grid.Column="0"
                    Grid.ColumnSpan="5" 
                    Height="325" 
                    VerticalAlignment="Top"
                    Margin="0,723,159,0" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <StackPanel Margin="20">
                    <TextBlock Text="Latest Incomes" 
                                 Style="{StaticResource SectionHeader}" 
                                 FontSize="40" 
                                 TextAlignment="Center"
                                  HorizontalAlignment="Center" 
                                 Margin="0,0,0,20"/>
                    <DataGrid Style="{StaticResource NeonDataGridStyle}"
                              ItemsSource="{Binding LatestIncomes}"
                              AutoGenerateColumns="False"
                              Height="170" 
                              ClipToBounds="False"
                              SnapsToDevicePixels="True"
                              VerticalScrollBarVisibility="Auto" Width="597">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" 
                                                Binding="{Binding ReceivedDate, StringFormat=d}" 
                                                Width="90" />

                            <DataGridTextColumn Header="Source" 
                                                Binding="{Binding IncomeSource.SourceName}" 
                                                 Width="*" />
                            <DataGridTextColumn Header="Amount" 
                                                Binding="{Binding Amount, StringFormat=\{0:F2\}}" 
                                                Width="125">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="TextAlignment" Value="Right" />
                                        <Setter Property="Margin" Value="0,0,5,0" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Actions" Width="175">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Update" 
                                                    Style="{StaticResource DataGridActionButtonStyle}"
                                                    Command="{Binding DataContext.UpdateIncomeComm, 
                                                             RelativeSource={RelativeSource 
                                                             AncestorType={x:Type Window}}}" 
                                                    CommandParameter="{Binding}"
                                                    FontSize="10" Padding="4,1"/>

                                            <Button Content="Remove" 
                                                    Style="{StaticResource DataGridActionButtonStyle}"
                                                    Command="{Binding DataContext.DeleteIncomeComm, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" 
                                                    CommandParameter="{Binding}"
                                                    FontSize="10" Padding="4,1"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            <!--//Latest expenses here-->
            <Border
                Grid.Column="4"
                Grid.ColumnSpan="5" 
                Height="325" 
                VerticalAlignment="Top"
                Margin="0,723,159,0" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <StackPanel Margin="20">
                    <TextBlock Text="Latest Expenses" 
                        Style="{StaticResource SectionHeader}" 
                        FontSize="40" 
                        TextAlignment="Center"
                          HorizontalAlignment="Center" 
                         Margin="0,0,0,20"/>
                    <DataGrid Style="{StaticResource NeonDataGridStyle}"
                             ItemsSource="{Binding LatestExpenses}"
                              AutoGenerateColumns="False"
                              Height="170" 
                              ClipToBounds="False"
                             SnapsToDevicePixels="True"
                             VerticalScrollBarVisibility="Auto" Width="597">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" 
                                    Binding="{Binding ExpenseDate, StringFormat=d}" 
                                    Width="90" />

                            <DataGridTextColumn Header="Category" 
                                    Binding="{Binding Category.Name}" 
                                     Width="*" />
                            <DataGridTextColumn Header="Amount" 
                                    Binding="{Binding Amount, StringFormat=\{0:F2\}}" 
                                    Width="125">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="TextAlignment" Value="Right" />
                                        <Setter Property="Margin" Value="0,0,5,0" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Actions" Width="175">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Update" 
                                                    Style="{StaticResource DataGridActionButtonStyle}"
                                                    Command="{Binding DataContext.UpdateExpenseComm, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" 
                                                    CommandParameter="{Binding}"
                                                    FontSize="10" Padding="4,1"/>

                                            <Button Content="Remove" 
                                                    Style="{StaticResource DataGridActionButtonStyle}"
                                                     Command="{Binding DataContext.DeleteExpenseComm, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" 
                                                     CommandParameter="{Binding}"
                                                    FontSize="10" Padding="4,1"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            <!--//Year so far-->
            <Border Grid.Column="8"
                    Grid.ColumnSpan="4" Margin="109,469,0,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.RowSpan="2">
                        <TextBlock Grid.Row="0" 
                               Style="{StaticResource SectionHeader}" 
                               FontSize="40"
                               TextAlignment="Center"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Top"
                               Margin="0,0,0,15">
                               Total incomes so <LineBreak/>This year</TextBlock>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Grid.Row="1" 
                                       Style="{StaticResource SubHeader}" 
                                       FontSize="40"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,0"
                                       Text="Amount so far: "/>
                            <TextBox Grid.Row="1"
                                     Style="{StaticResource EntryBox}"
                                     Width="168"
                                     Text="{Binding TotalIncomeYear, StringFormat='{}{0:F2}'}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Grid.Row="1" 
                                       Style="{StaticResource SubHeader}" 
                                       FontSize="40"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,0">
                                       Estimated<LineBreak/>This year:</TextBlock>
                            <TextBox Grid.Row="1" Width="168"
                                       Style="{StaticResource EntryBox}"
                                       Text="{Binding ProjectedSalary, 
                                       StringFormat='{}{0:F2}'}"/>


                        </StackPanel>
                        <TextBlock Grid.Row="1" 
                                   Style="{StaticResource SubHeader}" 
                                   FontSize="40"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,20,10,0"
                                   Text="You spent most on:" Height="44"/>
                        <ItemsControl Grid.Row="1" 
                                      ItemsSource="{Binding TopCategories}"
                                      Margin="5,0,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               FontSize="22" 
                                               Foreground="{StaticResource NeonBrush}" 
                                               Margin="0,5"
                                               FontFamily="pack://application:,,,/Resources/#IM FELL English SC"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
