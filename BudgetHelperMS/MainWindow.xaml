<Window x:Class="BudgetHelperMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BudgetHelperClassLibrary.ViewModels;assembly=BudgetHelperClassLibrary"
        xmlns:local="clr-namespace:BudgetHelperMS"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:BudgetViewModel}"        
        Title="BudgetHelper" Height="1080" Width="1920" 
        WindowStyle="SingleBorderWindow"
        Background="Transparent"
        Foreground="White"
        FontWeight="Bold">

    <Grid Background="{StaticResource BgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--//Smoke image lives here-->
        <Rectangle Grid.RowSpan="2" 
               Fill="{StaticResource BgImageBrush}" 
               IsHitTestVisible="False" />
        <!--//Top neon line lives here-->
        <Rectangle Grid.Row="0" 
               Height="2" 
               Fill="{StaticResource NeonBrush}" 
               VerticalAlignment="Top">
            <Rectangle.Effect>
                <DropShadowEffect Color="#A2D149" BlurRadius="10" ShadowDepth="0"/>
            </Rectangle.Effect>
        </Rectangle>
        <!--****** HÄR BÖRJAR RESTEN AV FÖNSTRET-->

        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!--* **** HÄR ÄR TOPPKOLUMNERNA-->
            <!--//Add incomes here-->
            <Border Grid.Row="0"  
                    Grid.RowSpan="4" 
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <StackPanel Margin="20,5,0,0">
                    <TextBlock  Text="Add incomes"
                            Style="{StaticResource SectionHeader}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,30,0,0"/>
                    <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Amount *"/>
                    <TextBox Text="{Binding NewIncomeAmount, 
                             UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EntryBox}"
                             Width="Auto" 
                             Height="30" 
                             Margin="0,10,0,0"/>
                    <TextBlock Style="{StaticResource SubHeader}" 
                               Margin="0,20,0,0"
                               Text="From *"/>
                    <ComboBox ItemsSource="{Binding IncomeSources}" 
                              DisplayMemberPath="SourceName" 
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedSource}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              Padding="5"
                              Margin="0,5,0,15">
                        <ComboBox.Resources>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                    <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Recieved *"
                             Margin="0,20,0,0"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" 
                                Foreground="White" 
                                BorderBrush="{StaticResource NeonBrush}" 
                                Background="Transparent"
                                CalendarStyle="{StaticResource DarkCalendarStyle}">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="#11ffffff"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <Button Content="SAVE" 
                            Style="{StaticResource YesButton}" 
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding AddIncomeComm}"/>
                </StackPanel>
            </Border>
            <!--//Add expenses here-->
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"       
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <StackPanel Margin="20,5,0,0">
                    <TextBlock  Text="Add Expenses"
                        Style="{StaticResource SectionHeader}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,30,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">


                        <TextBlock Style="{StaticResource SubHeader}" 
                                    Text="Amount *"/>
                        <TextBox Text="{Binding NewExpenseAmount, 
                             UpdateSourceTrigger=PropertyChanged,
                             Mode=TwoWay}"
                             Style="{StaticResource EntryBox}"
                             Width="200" 
                             Height="30" 
                             Margin="30,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Name *"
                               Margin="0,10,0,0"/>
                        <TextBox Text="{Binding NewExpenseName, 
                             UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EntryBox}"
                             Width="200" 
                             Height="30" 
                             Margin="30,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Margin="0,20,0,0"
                               Text="Category *"/>
                        <ComboBox ItemsSource="{Binding Categories}" 
                              DisplayMemberPath="Name" 
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedCategory}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              Padding="5"
                              Width="200"
                              Margin="30,25,0,15" SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBox.Resources>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                    <Setter Property="Background" Value="{StaticResource MutedBrush}"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Text="Date"
                               Margin="0,20,0,0"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" 
                                Foreground="White" 
                                BorderBrush="{StaticResource NeonBrush}" 
                                Background="Transparent"
                                    Margin="30,25,0,0"
                                    Width="200"
                                CalendarStyle="{StaticResource DarkCalendarStyle}">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Background" Value="#11ffffff"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"                          
                                   Height="Auto"
                                   Text="Reccuring expense?" Width="289"/>
                        <CheckBox IsChecked="{Binding SelectedIsRecurring}"
                                  Height="17"
                                  Background="{StaticResource MutedBrush}"
                                  BorderBrush="{StaticResource NeonBrush}" 
                                  Checked="CheckBox_Checked_1"
                                  VerticalAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}" 
                               Margin="0,20,0,0">
                               Reccurs how <LineBreak/> (In Months)</TextBlock>
                        <TextBox Text="{Binding SelectedFrequencyInMonths, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EntryBox}"
                             Width="200"
                             Height="30" Margin="30,25,0,0"/>
                        
                    </StackPanel>
                    <Button Content="SAVE" 
                            Style="{StaticResource YesButton}"
                            Command="{Binding AddExpenseComm}" 
                            HorizontalAlignment="Right"       
                            Margin="0,0,56,0"
                            Click="Button_Click"/>

                    <StackPanel Orientation="Horizontal" Margin="0,45,0,0">
                        <TextBlock Style="{StaticResource SubHeader}" 
                                   Text="Add new category"/>
                        <TextBox Text="{Binding NewCategory, 
                                 UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EntryBox}"
                                 Width="175" 
                                 Height="30" 
                                 Margin="20,0,0,0"/>
                    </StackPanel>
                    <Button Content="ADD" 
                            Style="{StaticResource YesButton}" 
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding AddNewCategoryComm}"/>
                </StackPanel>
            </Border>
            
            <!--//Summary last month-->
            <Border Grid.Row="0" 
                    Grid.RowSpan="4"
                    Grid.Column="6"        
                    Grid.ColumnSpan="3"        
                    HorizontalAlignment="Stretch"        
                    VerticalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeader}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="20,10,0,0" TextAlignment="Center">
                            Summary <LineBreak/> Last month
                    </TextBlock>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,30,0"
                                   Text="Total Incomes:"
                                   VerticalAlignment="Top"/>
                        <TextBox   Width="200"
                                   BorderBrush="{StaticResource MutedBrush}"
                                   Background="{StaticResource PanelJewelBrush1}"
                                   Foreground="{StaticResource NeonBrush}"

                                   Text="{Binding TotalIncomesLastMonth, StringFormat=\{0:C\}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                               Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,30,0"
                                   VerticalAlignment="Top"
                                   Text="Total Expenses:"/>
                        <TextBox   Width="200"                                    
                                   BorderBrush="{StaticResource MutedBrush}"
                                   Background="{StaticResource PanelJewelBrush1}"
                                   Foreground="{StaticResource NeonBrush}"
                                   Text="{Binding TotalExpensesLastMonth, 
                                          StringFormat={}{0:C}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,30,0"
                                   VerticalAlignment="Top"
                                   Text="Total balance"/>
                        <TextBox   Width="200"
                                   BorderBrush="{StaticResource MutedBrush}"
                                   Background="{StaticResource PanelJewelBrush1}"
                                   Foreground="{StaticResource NeonBrush}"
                                   Text="{Binding NetAmountLastMonth, 
                                          StringFormat={}{0:C}}"/>
                    </StackPanel>
                    <Button Content="UPDATE" 
                        Style="{StaticResource YesButton}" 
                        Margin="27,20,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding UpdateMonthSumComm}"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,77,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,30,0"
                                   VerticalAlignment="Top"
                                   Text="Sick days past month:"/>
                        <TextBox   Width="100"
                                   BorderBrush="{StaticResource MutedBrush}"
                                   Background="{StaticResource PanelJewelBrush1}"
                                   Foreground="{StaticResource NeonBrush}"
                                   Text="{Binding SickDays}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,30,0"
                                   VerticalAlignment="Top"
                                   Text="Sick cat days:"/>
                        <TextBox   Width="200"
                                   BorderBrush="{StaticResource MutedBrush}"
                                   Background="{StaticResource PanelJewelBrush1}"
                                   Foreground="{StaticResource NeonBrush}"
                                   Text="{Binding CareOfCatsDays}"/>
                    </StackPanel>
                    <Button Content="SAVE" 
                            Style="{StaticResource YesButton}" 
                            Margin="27,20,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding UpdateSickDaysComm}"/>
                </StackPanel>
            </Border>
            <!--//Month prognosis-->
            <Border Grid.Row="0" 
                            Grid.RowSpan="4"
                            Grid.Column="9"
                            Grid.ColumnSpan="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                <StackPanel>
                    <TextBlock  Text=""
                                Style="{StaticResource SectionHeader}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,30,0,0" TextAlignment="Center">                    
                                Prognosis for<LineBreak/>Next month</TextBlock>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">

                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,30,0"
                                   VerticalAlignment="Top"> 
                                   Estimated<LineBreak/> Incomes:</TextBlock>
                        <TextBox   Width="200"
                                   Height="45"
                                   Style="{StaticResource EntryBox}"
                                   Text="{Binding AvgIncomeLastThreeMonths, StringFormat=\{0:C\}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource SubHeader}"
                                   Margin="20,10,30,0"
                                   VerticalAlignment="Top"
                                   > Estimated<LineBreak/> Expenses:</TextBlock>
                        <TextBox   Width="200" Height="45"                                
                                   Style="{StaticResource EntryBox}"
                                   Text="{Binding AvgExpenseLastThreeMonths, 
                                          StringFormat={}{0:C}}"/>
                    </StackPanel>

                </StackPanel>
            </Border>



            <!--**************HÄR ÄR BOTTENKOLUMNERNA-->
            <!--//Latest incomes here-->
            <Border
                    Grid.Column="0"
                    Grid.ColumnSpan="5" Margin="0,741,159,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Latest Incomes" 
                       Style="{StaticResource SectionHeader}" 
                       FontSize="40" 
                       TextAlignment="Center"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

                    <DataGrid ItemsSource="{Binding LatestIncomes}" 
                              AutoGenerateColumns="False" 
                              Background="#CC000000" 
                              RowBackground="Transparent" 
                              Foreground="White"
                              BorderBrush="#FF2D5A27"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#33FFFFFF"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ReceivedDate, StringFormat=d}" Width="80" />
                            <DataGridTextColumn Header="Source" Binding="{Binding IncomeSource.SourceName}" Width="*" />
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="100" />

                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Update" 
                                                    Command="{Binding DataContext.UpdateIncomeComm, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}"
                                                    Background="#FF2D5A27" Foreground="White" Padding="5,2" Margin="2" BorderThickness="0"/>
                                            <Button Content="Remove" 
                                                    Command="{Binding DataContext.DeleteIncomeComm, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}"
                                                    Background="#FF8B0000" Foreground="White" Padding="5,2" Margin="2" BorderThickness="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            <!--//Latest expenses here-->
            <Border
                Grid.Column="4" Grid.ColumnSpan="4" Margin="0,741,0,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Latest Expenses" 
                               Style="{StaticResource SectionHeader}" 
                               FontSize="40" 
                               TextAlignment="Center"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <DataGrid ItemsSource="{Binding LatestExpenses}" 
                              AutoGenerateColumns="False" 
                              Background="#CC000000" 
                              RowBackground="Transparent" 
                              Foreground="White"
                              BorderBrush="#FF2D5A27"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#33FFFFFF"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ExpenseDate, StringFormat=d}" Width="80" />
                            <DataGridTextColumn Header="Source" Binding="{Binding Category.Name}" Width="*" />
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="100" />
                            <DataGridTextColumn Header="Recurring" Binding="{Binding IsRecurring}" Width="100" />
                            <DataGridTextColumn Header="How often (M)" Binding="{Binding FrequencyInMonths}" Width="100" />

                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Update" 
                                                    Command="{Binding DataContext.UpdateExpenseComm, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}"
                                                    Background="#FF2D5A27" Foreground="White" Padding="5,2" Margin="2" BorderThickness="0"/>
                                            <Button Content="Remove" 
                                                    Command="{Binding DataContext.DeleteExpenseComm, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}"
                                                    Background="#FF8B0000" Foreground="White" Padding="5,2" Margin="2" BorderThickness="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            <!--//Year so far-->
            <Border Grid.Column="7"
                    Grid.ColumnSpan="5" Margin="159,655,0,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="1">
                        <TextBlock Grid.Row="0" 
                               Style="{StaticResource SectionHeader}" 
                               FontSize="40"
                               TextAlignment="Center"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Top"
                               Margin="0,0,0,15">
                               Total incomes so far this year</TextBlock>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Grid.Row="1" 
                                       Style="{StaticResource SubHeader}" 
                                       FontSize="40"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Text="Amount so far: "/>
                            <TextBox Grid.Row="1"
                                       Width="200"
                                       Height="45"
                                       Style="{StaticResource EntryBox}"
                                       FontSize="25"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"
                                       Text="{Binding TotalIncomeYear, StringFormat={}{0:C}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Grid.Row="1" 
                                       Style="{StaticResource SubHeader}" 
                                       FontSize="40"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0">
                                       Estimated <LineBreak/>this year:</TextBlock>
                            <TextBox Grid.Row="1"
                                       Width="200"
                                       Height="45"
                                       Style="{StaticResource EntryBox}"
                                       FontSize="25"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"
                                       Text="{Binding ProjectedSalary, StringFormat={}{0:C}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="144" Margin="0,10,0,0">
                            <TextBlock Grid.Row="1" 
                                       Style="{StaticResource SubHeader}" 
                                       FontSize="40"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"
                                       Margin="0,0,10,0"
                                       Text="You spent most on:"/>
                            <ItemsControl Grid.Row="1" 
                                          ItemsSource="{Binding TopCategories}"
                                          Margin="20,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   FontSize="18" 
                                                   Foreground="{StaticResource NeonBrush}" 
                                                   Margin="0,5"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
