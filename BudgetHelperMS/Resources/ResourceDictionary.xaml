<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="IM_FELL_English_SC">

    
    <!--Färger och brushes KRÄVER namn för att sen kunna användas i tex MainWindow-->
    <SolidColorBrush x:Key="BgBrush" Color="#080B0A" />
    <SolidColorBrush x:Key="PanelJewelBrush1" Color="#0f130c" />
    <SolidColorBrush x:Key="PanelJewelBrush3" Color="#042715" />
    <SolidColorBrush x:Key="MutedBrush" Color="#709681" />
    <SolidColorBrush x:Key="NeonBrush" Color="#5dc44f" />
    <SolidColorBrush x:Key="TextBrush" Color="#D1D9D6" />

    <!--RÖKEN-->
    <ImageBrush x:Key="BgImageBrush" 
                ImageSource="pack://application:,,,/Resources/bgsmoke.png"                
                Stretch="UniformToFill" 
                Opacity="0.1"/>


    <SolidColorBrush x:Key="PrimaryBackground" Color="Black"/>
    <SolidColorBrush x:Key="CardBackground" Color="DarkGray"/>
    <SolidColorBrush x:Key="AccentColor" Color="BlanchedAlmond"/>
    <SolidColorBrush x:Key="PositiveGreen" Color="LightGreen"/>
    <SolidColorBrush x:Key="NegativeRed" Color="DarkRed"/>
    <SolidColorBrush x:Key="BorderColor" Color="LightGray"/>
    <SolidColorBrush x:Key="MainText" Color="white"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#86868B"/>

    <!--Används för att sätta en standard för en 
    viss innehållskomponent - tex en knapp eller en textbox-->
        
    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
    </Style>
    
    <!--<Style TargetType="Grid">
        <Setter Property="Background" Value="Black"/>
    </Style>-->
    <Style x:Key="MainGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="10"/>
        
    </Style>

    <Style x:Key="SectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="60"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#IM FELL English SC"/>
    </Style>
    
    <Style x:Key="SubHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#IM FELL English SC"/>
        <Setter Property="Foreground" Value="#5dc44f"/>
    </Style>

    <Style x:Key="DarkCalendarStyle" TargetType="Calendar">
        <Setter Property="Background" Value="{StaticResource PanelJewelBrush1}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Calendar">
                    <StackPanel x:Name="PART_Root" HorizontalAlignment="Center">
                        <CalendarItem x:Name="PART_CalendarItem" 
                                  Background="{TemplateBinding Background}" 
                                  BorderBrush="{TemplateBinding BorderBrush}" 
                                  BorderThickness="1"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Padding" Value="5,8"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PanelJewelBrush3}"/>
                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource PanelJewelBrush1}"/>
                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="False"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Background" Value="{StaticResource PanelJewelBrush1}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>

        <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItemStyle}"/>

        <Style.Resources>
            <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#080B0A" />
            <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="White" />
        </Style.Resources>
    </Style>

    <!--För att styra tex knappar
    Template för alla knappar-->
    <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
        <Border x:Name="BtnBorder"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="12">

            <Viewbox Stretch="Uniform">
                <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
            </Viewbox>
        </Border>        
    </ControlTemplate>

    <!--För att styra specifika knappar mha Style-->
    <Style x:Key="YesButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PanelJewelBrush3}" />
        <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonBrush}" />
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#IM FELL English SC"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource NeonBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource PanelJewelBrush3}" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="White" />
                            <Setter Property="Foreground" Value="Black" />
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#1a1a1a" />
                            <Setter Property="Foreground" Value="#444444" />
                            <Setter Property="BorderBrush" Value="#222222" />
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

