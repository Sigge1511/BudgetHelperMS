<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    
    <!--Färger och brushes KRÄVER namn för att sen kunna användas i tex MainWindow-->
    <SolidColorBrush x:Key="PrimaryBackground" Color="Black"/>
    <SolidColorBrush x:Key="CardBackground" Color="DarkGray"/>
    <SolidColorBrush x:Key="AccentColor" Color="BlanchedAlmond"/>
    <SolidColorBrush x:Key="PositiveGreen" Color="LightGreen"/>
    <SolidColorBrush x:Key="NegativeRed" Color="DarkRed"/>
    <SolidColorBrush x:Key="BorderColor" Color="LightGray"/>
    <SolidColorBrush x:Key="MainText" Color="white"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#86868B"/>




    <!--Används för att sätta en standard för en 
    viss innehållskomponent - tex en knapp eller en textbox-->
    <Style TargetType="Button">
        <Setter Property="Background" Value="DarkSlateGray"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="Padding" Value="20,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
    </Style>
    
    <Style TargetType="Grid">
        <Setter Property="Background" Value="Black"/>
    </Style>
    <Style x:Key="MainGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
    </Style>
    
    <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="{StaticResource MainText}"/>
    </Style>
    
    
    
    
    
    
</ResourceDictionary>