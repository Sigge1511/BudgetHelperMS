<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    <!--Färger och brushes KRÄVER namn för att sen kunna användas i tex MainWindow-->
    <SolidColorBrush x:Key="PrimaryBackground" Color="Black"/>
    <SolidColorBrush x:Key="CardBackground" Color="DarkGray"/>
    <SolidColorBrush x:Key="AccentColor" Color="BlanchedAlmond"/>
    <SolidColorBrush x:Key="PositiveGreen" Color="LightGreen"/>
    <SolidColorBrush x:Key="NegativeRed" Color="DarkRed"/>
    <SolidColorBrush x:Key="BorderColor" Color="LightGray"/>
    <SolidColorBrush x:Key="MainText" Color="white"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#86868B"/>

    <!--Används för att sätta en standard för en 
    viss innehållskomponent - tex en knapp eller en textbox-->
        
    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
    </Style>
    
    <Style TargetType="Grid">
        <Setter Property="Background" Value="Black"/>
    </Style>
    <Style x:Key="MainGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
        <Setter Property="Margin" Value="10"/>
        
    </Style>
    
    <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource MainText}"/>
    </Style>

    
    <!--För att styra tex knappar-->

    <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="12">
            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Margin="{TemplateBinding Padding}"/>
        </Border>
    </ControlTemplate>
    <Style TargetType="Button" x:Name="YesButton">
        <Setter Property="Background" Value="DarkGray" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="FontFamily" Value="Segoe UI"/>    
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
            


